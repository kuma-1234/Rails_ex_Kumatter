<p><%= notice %></p>

<%= form_with(model: @post, local: true, url: new_or_edit ) do |form| %>
  
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="blog_content">
    <p><%= form.label :tweet, "つぶやき" %></p>
    <%= form.text_area :content%>
  </div>

  <br>

  <%= form.submit  "投稿する" %>
<% end %>

<br>

<%= link_to 'つぶやきの一覧へ戻る', posts_path %>