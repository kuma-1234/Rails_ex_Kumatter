<h2>全てのツイート</h2>
<table>
  <tr>
    <th>ツイート</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to 'ツイートを確認する', post_path(blog.id) %></td>
    <td><%= link_to "ツイートを編集する", edit_post_path(blog.id) %></td>
    <td><%= link_to 'ツイートを削除する', post_path(blog.id), method: :delete, data:{confirm:'本当に削除しても良いですか？'} %></td>
  </tr>
<% end %>
</table>